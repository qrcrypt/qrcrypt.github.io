<div class="row">
    <div class="col-6">
        <form class="js-encrypt-text-form">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control js-zxcvbn" id="password" placeholder="Your password">
                <small></small>
            </div>
            <div class="form-group">
                <label for="password-confirm">Password confirmation</label>
                <input type="password" class="form-control" id="password-confirm" placeholder="Password confirmation" data-password-confirmation="password">
                <small></small>
            </div>
            <div class="form-group">
                <label for="plaintext">Your plaintext</label>
                <textarea class="form-control height-2x" id="plaintext"></textarea>
            </div>
        </form>
    </div>
    <div class="col-6">
        <div class="alert alert-danger" id="error">Error</div>
        <div class="form-group">
            <label class="form-check-label" for="ciphertext">Encrypted text</label>
            <div class="copy-wrapper">
                <div class="js-copy copy-button btn btn-sm btn-dark">copy</div>
                <code id="ciphertext" class="ciphertext"></code>
            </div>
            <div id="qr"></div>
        </div>
    </div>
</div>
